{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "RESTful APIs using Express, by running one command",
  "main": "src/server.js",
  "repository": "https://github.com/minhchvn/social-network-node.git",
  "license": "MIT",
  "scripts": {
    "start": "yarn run build && node ./build/src/server.js",
    "dev": "nodemon --exec babel-node ./src/server.js",
    "scsstocss": "node-sass -w ./src/resources/scss/main.scss ./src/public/assets/css/style.css",
    "start:dev": "yarn dev",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "yarn run clean && yarn run build-babel",
    "lint": "yarn eslint .",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "prettier": "prettier --check **/*.js",
    "prettier:fix": "prettier --write **/*.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.3",
    "@meanie/mongoose-to-json": "^2.6.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-ejs-extend": "^0.0.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.5.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "http-errors": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.13",
    "mongoose-paginate-v2": "^1.4.2",
    "morgan": "^1.10.0",
    "node-sass": "^6.0.1",
    "nodemailer": "^6.7.1",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1"
  }
}

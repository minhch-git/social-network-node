          <div class="col-12 col-sm-12 col-md-2 col-lg-2 col-xl-2"></div>
          <!--info -->
          <div class="col-12 col-sm-12 col-md-10 col-lg-5 col-xl-4">
            <div class="content-info_container pt-3">
              <!-- name -->
              <h3 class="name-user">Minhch</h3>
              <!-- info-details -->
              <div class="info-users_details">
                <!-- gender -->
                <div class="gender-user">
                  <i class="fas fa-venus-mars d-inline"></i>
                  <span class="px-2 default">Nam</span>
                </div>
                <!-- Birthday -->
                <div class="birthday-user">
                  <i class="fas fa-calendar-alt"></i>
                  <span class="px-2 default">25-11-1999</span>
                </div>
                <!-- address -->
                <div class="address-user">
                  <i class="fas fa-map-marker-alt"></i>
                  <span class="px-2 default">Bình Định</span>
                </div>
              </div>
            </div>
          </div>
          <!-- following and follower -->
          <div class="col-12 col-md-12 col-lg-5 col-xl-6">
            <div
              class="
                follow-content_container
                d-flex
                justify-content-between
                align-items-end
              "
            >
              <!-- following -->
              <button class="follow following">
                <i class="fas fa-heart"></i>Following <span>(30)</span>
              </button>
              <!-- follower -->
              <button class="follow">
                <i class="fas fa-heart"></i>Follower <span>(4)</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

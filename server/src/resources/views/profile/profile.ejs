<!-- Modal: change cover image -->
<div class="modal" id="coverImageModal">
  <div class="modal-dialog">
    <div class="modal-content bg-grey-dim">
      <!-- Modal Header -->
      <div class="modal-header">
        <p class="modal-title text-primary">Bạn muốn thay đổi ảnh bìa mình?</p>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <!-- Modal body -->
      <div class="modal-body">
        <label for=""></label>
        <input type="file" name="cover-image" id="coverImageChange" />
        <div class="container-fluid mt-3">
          <div class="row">
            <div class="col-lg-12">
              <img
                src="https://cdn.pixabay.com/photo/2021/11/10/18/21/woman-6784555_960_720.jpg"
                alt="Ảnh bìa"
              />
              <button
                type="button"
                class="btn btn-success btn-sm mt-2"
                data-bs-dismiss="modal"
              >
                Sửa
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal footer -->
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-success btn-sm"
          data-bs-dismiss="modal"
        >
          Yes
        </button>
        <button
          type="button"
          class="btn btn-danger btn-sm"
          data-bs-dismiss="modal"
        >
          No
        </button>
      </div>
    </div>
  </div>
</div>

